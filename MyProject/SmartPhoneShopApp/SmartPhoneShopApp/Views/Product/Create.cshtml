@model HomeCreateViewModel
<form asp-controller="Product" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" type="text" class="form-control" >
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
